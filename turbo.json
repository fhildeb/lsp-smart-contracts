{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": ["**/.env.local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["**/artifacts/**", "types/**", "**/types/**"],
      "cache": true
    },
    "lint": {
      "env": ["CONTRACT_VERIFICATION_TESTNET_PK"]
    },
    "lint:solidity": {},
    "clean": {},
    "test": {
      "cache": true
    },
    "test:foundry": {
      "cache": true
    },
    "test:coverage": {
      "dependsOn": ["test"],
      "cache": false
    }
  }
}
